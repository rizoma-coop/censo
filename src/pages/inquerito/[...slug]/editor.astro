---
export const prerender = false

import LayoutSurvey from '@/layouts/layoutSurvey.astro'
import AuthProvider from '@/components/AuthProvider.vue'
import SurveyCreator from '@/components/SurveyCreator.vue'

const { slug } = Astro.params
---

<LayoutSurvey>
  <div id="authContainer">
    <AuthProvider client:load>
      <SurveyCreator client:load surveyId={slug || ''} />
    </AuthProvider>
  </div>
</LayoutSurvey>

<style>
  #authContainer {
    height: 100%;
  }
</style>