---
import '@/css/main.css'
import 'survey-core/defaultV2.min.css'
import 'survey-creator-core/survey-creator-core.min.css'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
---

<doctype html>
<html lang="pt-PT">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Censo Rizoma 2025</title>

  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&display=swap" rel="stylesheet">

</head>
<body>
  <div class="l-wrapper">
    <Header />
    <main class="l-container l-stack l-stack--large">
      <slot />
    </main>
    <Footer />
  </div>

  <script type="text/javascript" src="/vendor/survey.core.min.js"></script>
  <script type="text/javascript" src="/vendor/survey-js-ui.min.js"></script>

  <script type="text/javascript" src="/vendor/survey-creator-core.min.js"></script>
  <script type="text/javascript" src="/vendor/survey-creator-js.min.js"></script>
  <script src="main.ts"></script>
</body>
</html>
