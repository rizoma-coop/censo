---
import { Image } from 'astro:assets'
import logo from '@/images/rizoma-logo-small.png'
import Navigation from './Navigation.astro'
const currentPath = Astro.url.pathname
---

<header>
  <div class="l-container container">
    <a href="/" class="logo">
      <figure>
        <Image 
          src={logo} 
          alt="Logótipo Rizoma"
          width={100}
        />
      </figure>
      <h1>Censo Rizoma 2025</h1>
    </a>
    <Navigation currentPath={currentPath} class="navigation" />
  </div>
</header>


<style scoped>
  header {
    padding-block: 2rem;
    color: var(--color-primary);
  }
  .container {
    display: grid;
    grid-template-columns: 1fr auto;
    grid-template-areas: 'logo navigation';
    gap: 2rem;
    align-items: center;
    justify-content: center;
  }
  .logo {
    --gap: 2rem;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    grid-area: logo;
    gap: var(--gap);
    > figure {
      border-inline-end: 1px solid var(--color-primary);
      padding-inline-end: var(--gap);
    }
  }
  h1 {
    font-weight: 500;
    font-size: 2rem;
  }
  .navigation {
    grid-area: navigation;
  }


  @media (max-width: 1200px) {
    .container {
      grid-template-columns: auto;
      grid-template-areas:
        'logo'
        'navigation';
    }
  }
  @media (max-width: 700px) {
    h1 {
      font-size: 1.5rem;
    }
  }
  @media (max-width: 600px) {
    .logo {
      --gap: 1rem;
      img {
        width: 70px;
        height: auto;
      }
    }
    h1 {
      font-size: 1rem;
    }
  }
</style>
