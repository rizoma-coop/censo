---
import { Image } from 'astro:assets'
import logoDark from '@/images/rizoma-logo-black.png'
---

<footer class="l-row">
  <Image src={logoDark} alt="Censo Rizoma 2025" width={100} />
  <p>Censo Rizoma 2025</p>
</footer>

<style scoped>
  footer {
    display: flex;
    justify-content: space-between;
    margin-block-start: 3rem;
    padding: 4rem 2rem;
    color: #FFF;
    background-color: var(--color-neutral-70);
  }

  @media (max-width: 700px) {
    img {
      width: 60px;
      height: auto;
    }
  }
</style>

